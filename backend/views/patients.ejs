<%- include ("./components/header");%>
<div class="filter-form">
    <form action="/api/v1/patient" method="get">

        <input type="text" placeholder="Enter First Name" name="fName">
        <input type="text" placeholder="Enter Last Name" name="lName">
        <input type="date" name="dateOfBirth">
        <button id="form-btn" type="submit">Search</button>
    </form>
    <a id="add-button" href="/api/v1/patient/new">+</a>
</div>
<% patients.forEach((item)=>{%>
<div class="col-lg-4 col-md-4">
    <div class="text-center card-box">
        <div class="member-card pt-2 pb-2">
            <!--<div class="thumb-lg member-thumb mx-auto"><img src="<%= item.avatar%> z"class="rounded-circle img-thumbnail" alt="profile-image"></div>-->
            <div class="">
                <h4><b><%=item.fName%> <%=item.lName%></b></h4>
                <!--<p class="text-muted">@Speciality <span>| </span><span><%=item.speciality%></span></p>-->
            </div>

            <button type="button" class="btn btn-primary mt-3 btn-rounded waves-effect w-md waves-light">Message
                Now</button>
            <div class="mt-4">
                <div class="row">
                    <div class="col-4">
                        <div class="mt-3">
                            <h4><%=item.dateOfBirth.getDate()+1%>-<%=item.dateOfBirth.getMonth()+1%>-<%=item.dateOfBirth.getFullYear()%></h4>                           <p class="mb-0 text-muted">Date of birth</p>

                        </div>
                    </div>
                    <div class="col-4">
                        <div class="mt-3">
                            <h4><%=item.room%></h4>
                            <p class="mb-0 text-muted">Room</p>

                        </div>
                    </div>
                    <div class="col-4">
                        <div class="mt-3">
                            <h4><%=item.sex%></h4>
                            <p class="mb-0 text-muted">Sex</p>
                        </div>
                    </div>
                </div>
            </div><br>
            <a href="/api/v1/patient/delete?id=<%=item._id%>" class="btn btn-primary btn-danger">Delete</a>
        </div>
    </div>
</div>
<%});%>

</table>
<%- include ("./components/footer");%>